<Application x:Class="ContactAngleMain.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ContactAngleMain"
             StartupUri="Login.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--这个节点就是配置默认语言的-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="style/CommonWindowStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/YCCustomControl;component/Themes/DefaultSkin.xaml"/>
                <ResourceDictionary Source="Language\SimplifiedChinese.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
