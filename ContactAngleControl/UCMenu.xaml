<UserControl x:Class="ContactAngleControl.UCMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactAngleControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Menu Background="Transparent" VerticalAlignment="Center">
        <MenuItem Header="{DynamicResource File}" Style="{StaticResource CommMenuItem}">
        </MenuItem>
        <MenuItem Header="{DynamicResource Config}" Style="{StaticResource CommMenuItem}"></MenuItem>
        <MenuItem Header="{DynamicResource Analysis}" Style="{StaticResource CommMenuItem}"></MenuItem>
        <MenuItem Header="{DynamicResource Help}" Style="{StaticResource CommMenuItem}">
            <MenuItem Header="{DynamicResource SimplifiedChinese}" Tag="0" Click="MenuItem_Click"></MenuItem>
            <MenuItem Header="{DynamicResource TraditionalChinese}"  Tag="1" Click="MenuItem_Click"></MenuItem>
            <MenuItem Header="{DynamicResource English}"  Tag="2" Click="MenuItem_Click"></MenuItem>
        </MenuItem>
    </Menu>
</UserControl>
